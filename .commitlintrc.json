{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix", 
        "docs",
        "style",
        "refactor",
        "test",
        "chore",
        "ci",
        "build",
        "perf",
        "revert"
      ]
    ],
    "scope-enum": [
      1,
      "always",
      [
        "cli",
        "core", 
        "adapters",
        "templates",
        "docs",
        "parser",
        "validator",
        "utils",
        "tests",
        "deps",
        "changelog",
        "readme",
        "config",
        "scripts",
        "workflows"
      ]
    ],
    "subject-case": [2, "never", ["start-case", "pascal-case", "upper-case"]],
    "subject-empty": [2, "never"],
    "subject-full-stop": [2, "never", "."],
    "type-case": [2, "always", "lower-case"],
    "type-empty": [2, "never"],
    "scope-case": [2, "always", "lower-case"],
    "scope-empty": [0]
  }
}