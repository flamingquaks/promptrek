{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://promptrek.ai/schema/user-config/v1.0.0.json",
  "title": "PrompTrek User Configuration",
  "description": "User-specific configuration for PrompTrek. This file should NOT be committed to version control.",
  "type": "object",
  "properties": {
    "schema_version": {
      "type": "string",
      "description": "User config schema version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "default": "1.0.0",
      "examples": ["1.0.0"]
    },
    "editor_paths": {
      "type": "object",
      "description": "Editor-specific file paths (e.g., cline_mcp_path)",
      "properties": {
        "cline_mcp_path": {
          "type": "string",
          "description": "Path to Cline's user-level MCP configuration file",
          "examples": [
            "~/Library/Application Support/Code/User/globalStorage/saoudrizwan.claude-dev/settings/cline_mcp_settings.json",
            "~/.config/Code/User/globalStorage/saoudrizwan.claude-dev/settings/cline_mcp_settings.json",
            "%APPDATA%/Code/User/globalStorage/saoudrizwan.claude-dev/settings/cline_mcp_settings.json"
          ]
        }
      },
      "additionalProperties": {
        "type": "string",
        "description": "Additional editor-specific paths"
      }
    }
  },
  "required": ["schema_version"],
  "additionalProperties": false
}
